<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_flipper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:text="Enter the Product Code or Scan: "
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etCode"
                android:layout_width="250dp"
                android:layout_height="fill_parent" 
                android:singleLine="true"/>

            <Button
                android:id="@+id/bScan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="SCAN"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:text="Enter the name of the Product: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:text="Enter the Product Price: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:text="Enter the Product Quantity: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" 
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tvA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:text="Enter the :"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tvPage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1 of 4" />
    </LinearLayout>

    <LinearLayout
