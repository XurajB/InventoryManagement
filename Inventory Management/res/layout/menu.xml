<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35px"
        android:paddingTop="35px" >

        <Button
            android:id="@+id/bEnterItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTER ITEM" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35px"
        android:paddingTop="35px" >

        <Button
            android:id="@+id/bFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIND" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35px"
        android:paddingTop="35px" >

        <Button
            android:id="@+id/bView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIEW" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35px"
        android:paddingTop="35px" >

        <Button
            android:id="@+id/bOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPTIONS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35px"
        android:paddingTop="35px" >

        <Button
            android:id="@+id/bExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXIT" 
            />
    </LinearLayout>
    </LinearLayout>
